<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://moqui.org/xsd/service-definition-3.xsd">
    <service verb="process" noun="ExternalInventoryReset">
        <description>Process inventory rows from NetSuite file and compute variances</description>
        <in-parameters>
            <parameter name="idType"/>
            <parameter name="externalFacilityId"/>
            <parameter name="quantity" type="Integer"/>
            <parameter name="idValue"/>
            <parameter name="locationSeqId"/>
            <parameter name="productId"/>
            <parameter name="_importBatchId"/>
            <parameter name="facilityId"/>
        </in-parameters>
        <out-parameters>
            <parameter name="successCount"/>
            <parameter name="failureList"/>
        </out-parameters>
        <actions>
<!--            <set field="idType" value="NETSUITE_PRODUCT_ID"/>-->
            <if condition="!productId">
                <if condition="!idType || !idValue">
                    <return error="true" message="Either productId or both idType and idValue must be provided"/>
                </if>
                <entity-find entity-name="org.apache.ofbiz.product.product.GoodIdentification" list="goodIdentifications" limit="1">
                    <econdition field-name="goodIdentificationTypeId" from="idType"/>
                    <econdition field-name="idValue" from="idValue"/>
                    <date-filter/>
                    <order-by field-name="fromDate"/>
                </entity-find>

                <set field="productId" from="goodIdentifications?.first?.productId"/>
                <if condition="!productId">
                    <return error="true" message="No product found for idType [${idType}] and idValue [${idValue}]"/>
                </if>
            </if>

            <!-- Check if facilityId is provided, if not look it up using externalFacilityId -->
            <if condition="!facilityId &amp;&amp; externalFacilityId">
                <entity-find entity-name="mantle.facility.Facility" list="facility">
                    <econdition field-name="externalId" from="externalFacilityId"/>
                </entity-find>
                <if condition="!facility">
                    <return error="true" message="No facility found with externalFacilityId: ${externalFacilityId}"/>
                </if>
                <set field="facilityId" from="facility.first.facilityId"/>
                <elseif condition="!facilityId">
                    <return error="true" message="Either facilityId or externalFacilityId must be provided"/>
                </elseif>
            </if>


            <!-- Check inventory configuration -->
            <entity-find entity-name="org.apache.ofbiz.product.inventory.InventoryItem" list="inventoryItems">
                <econdition field-name="productId" from="productId"/>
                <econdition field-name="facilityId" from="facilityId"/>
                <econdition field-name="locationSeqId" from="locationSeqId" ignore-if-empty="true"/>
                <order-by field-name="-datetimeReceived"/>
            </entity-find>

            <if condition="!inventoryItems">
               <return error="true" message=""/>
                <else>
                    <set field="inventoryItem" from="inventoryItems[0]"/>
                </else>
            </if>

            <entity-find-one entity-name="co.hotwax.inventory.ReservedInventorySummary" value-field="reservedItemByFacility">
                <field-map field-name="facilityId" from="facilityId"/>
                <field-map field-name="productId" from="productId"/>
            </entity-find-one>

            <set field="quantityReserved" from="reservedItemByFacility?.quantity ?: 0" type="Integer"/>

            <set field="quantityOnHand" from="inventoryItem.quantityOnHandTotal ?: 0" type="Integer"/>
            <set field="availableToPromise" from="inventoryItem.availableToPromiseTotal ?: 0" type="Integer"/>

            <set field="availableToPromiseDiff" from="quantity - availableToPromise - quantityReserved" type="Integer"/>
            <set field="quantityOnHandDiff" from="quantity - quantityOnHand" type="Integer"/>

            <!-- After calculating availableToPromiseDiff and quantityOnHandDiff -->
            <if condition="availableToPromiseDiff != 0 || quantityOnHandDiff != 0">
                <set field="resetRecord" from="[:]"/>
                <set field="resetRecord.resetDateResourceId" from="_importBatchId"/>
                <set field="resetRecord.facilityId" from="facilityId"/>
                <set field="resetRecord.externalFacilityId" from="externalFacilityId"/>
                <set field="resetRecord.productId" from="productId"/>
                <set field="resetRecord.productIdentType" from="idType"/>
                <set field="resetRecord.productIdentValue" from="idValue"/>
                <set field="resetRecord.inventoryItemId" from="inventoryItem.inventoryItemId"/>
                <set field="resetRecord.inventoryItemATP" from="availableToPromise" type="Integer"/>
                <set field="resetRecord.inventoryItemQOH" from="quantityOnHand" type="Integer"/>
                <set field="resetRecord.inventoryItemATPDiff" from="availableToPromiseDiff" type="Integer"/>
                <set field="resetRecord.inventoryItemQOHDiff" from="quantityOnHandDiff" type="Integer"/>
                <set field="resetRecord.externalATP" from="quantity" type="Integer"/>
                <set field="resetRecord.externalQOH" from="quantity" type="Integer"/>
                <service-call name="create#co.hotwax.netsuite.inventory.ExternalInventoryReset" in-map="resetRecord" out-map="resetResult"/>
            </if>

        </actions>
    </service>
</services>